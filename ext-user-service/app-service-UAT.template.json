{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "subscriptionId": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "hostingPlanName": {
            "type": "string"
        },
        "serverFarmResourceGroup": {
            "type": "string"
        },
        "alwaysOn": {
            "type": "bool"
        },
        "hostingEnvironmentProfile": {
            "type": "object"
        },
        "linuxFxVersion": {
            "type": "string"
        }
    },
    "resources": [
        {
            "apiVersion": "2018-11-01",
            "name": "[parameters('name')]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('location')]",
            "tags": {
                "Environment": "UAT",
                "Location": "South Central US"
            },
            "identity": {
                "type": "SystemAssigned"
            },
            "dependsOn": [],
            "properties": {
                "name": "[parameters('name')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "APPCONFIG_ENDPOINT",
                            "value": "https://dev-apis-app-config.azconfig.io",
                            "slotSetting": false
                        },
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "a6efd83b-8e53-4989-87ad-6f66a228a78f",
                            "slotSetting": false
                        },
                        {
                            "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
                            "value": "InstrumentationKey=a6efd83b-8e53-4989-87ad-6f66a228a78f;IngestionEndpoint=https://southcentralus-3.in.applicationinsights.azure.com/",
                            "slotSetting": false
                        },
                        {
                            "name": "ASPNETCORE_ENVIRONMENT",
                            "value": "FREDUAT",
                            "slotSetting": false
                        },
                        {
                            "name": "WEBSITE_RUN_FROM_PACKAGE",
                            "value": "1",
                            "slotSetting": false
                        },
                        {
                            "name": "WEBSITE_VNET_ROUTE_ALL",
                            "value": "1",
                            "slotSetting": false
                        }
                    ],
                    "linuxFxVersion": "[parameters('linuxFxVersion')]",
                    "alwaysOn": "[parameters('alwaysOn')]"
                },
                "serverFarmId": "[concat('/subscriptions/', parameters('subscriptionId'),'/resourcegroups/', parameters('serverFarmResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]",
                "clientAffinityEnabled": false,
                "hostingEnvironmentProfile": "[parameters('hostingEnvironmentProfile')]"
            }
        }
    ]
}
