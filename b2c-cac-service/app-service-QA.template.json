{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "subscriptionId": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "hostingPlanName": {
            "type": "string"
        },
        "serverFarmResourceGroup": {
            "type": "string"
        },
        "alwaysOn": {
            "type": "bool"
        },
        "ftpsState": {
            "type": "string"
        },
        "hostingEnvironmentProfile": {
            "type": "object"
        },
        "linuxFxVersion": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2018-11-01",
            "name": "[parameters('name')]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('location')]",
            "tags": {
                "Environment": "QA",
                "Location": "South Central US",
		"Builder": "Sunil Koirala"
            },
            "dependsOn": [],
	    "identity": {
		"type": "SystemAssigned"
            },
            "properties": {
                "name": "[parameters('name')]",
                "siteConfig": {
                    "appSettings": [
			{
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "6dcc2f79-b5a8-47e7-b63f-1ab528afe22c"
                        },
                        {
                            "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
                            "value": "InstrumentationKey=6dcc2f79-b5a8-47e7-b63f-1ab528afe22c;IngestionEndpoint=https://southcentralus-3.in.applicationinsights.azure.com/;LiveEndpoint=https://southcentralus.livediagnostics.monitor.azure.com/"
                        },
						{
                            "name": "ApplicationInsightsAgent_EXTENSION_VERSION",
                            "value": "~3"
                        },
                        {
                            "name": "tablestorageuri",
                            "value": "https://stabsb2ccacuat.table.core.windows.net/Auths"
                        },
                        {
                            "name": "trustedRootCAUrl",
                            "value": "https://stabsb2ccacuat.blob.core.windows.net/caccertroot/certs.zip"
                        }
		],
                    "linuxFxVersion": "[parameters('linuxFxVersion')]",
                    "alwaysOn": "[parameters('alwaysOn')]",
                    "ftpsState": "[parameters('ftpsState')]"
                },
                "serverFarmId": "[concat('/subscriptions/', parameters('subscriptionId'),'/resourcegroups/', parameters('serverFarmResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]",
                "clientAffinityEnabled": false,
                "virtualNetworkSubnetId": null,
                "httpsOnly": true,
                "hostingEnvironmentProfile": "[parameters('hostingEnvironmentProfile')]"
            }
        }
    ]
}
